    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "prettier": "^2.1.1",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0"
  },
  "nyc": {
    "exclude": [
      "src/test/*",
      "src/index.js",
      "src/controllers/socialLogin.controller.js",
      "src/config/index.js",
